{
  "name": "to-do",
  "version": "1.0.0",
  "description": "to-do list app for the terminal",
  "keywords": [
    "to-do",
    "terminal"
  ],
  "homepage": "https://github.com/gouveags/to-do#readme",
  "bugs": {
    "url": "https://github.com/gouveags/to-do/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gouveags/to-do.git"
  },
  "license": "MIT",
  "author": "gouveags",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "tsx --test test/**/*.test.ts",
    "start": "tsc && node dist/index.js",
    "lint": "biome check src test",
    "lint:fix": "biome check --write src test",
    "format": "biome format --write src test",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "biome check --write"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@types/node": "^25.0.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
